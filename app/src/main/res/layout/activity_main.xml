<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/Alarmimage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-95dp"
        tools:layout_editor_absoluteY="-16dp">
    </ImageView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.402"
        tools:layout_editor_absoluteX="16dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:textSize="25dp"
        android:text="MAD_ALARM_ANIMATION"
        app:layout_constraintBottom_toTopOf="@+id/materialCardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Alarmimage" />

    <ImageView
        android:id="@+id/alarm_animation_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/alarm_animation_list"
        app:layout_constraintTop_toBottomOf="@id/textView2"/>
    <TextView
        android:id="@+id/create_alarm_time"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:text="Create Alarm Time"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/alarm_animation_image"/>
    <TextView
        android:id="@+id/desctipation_alarm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:text="By Pressing buttons, Alarm can be created and cancelled. \n \n Check current time by looking below real digital clock."
        app:layout_constraintTop_toBottomOf="@id/create_alarm_time"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
